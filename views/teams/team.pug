extends ../layout

block content
	.row
		.col-xs-3
			.flat-nav
				ul
					li: a(href='/teams/create')
						i.fa.fa-plus
						= t('teams:actions.create')
			ul#id-teams-list.flat-list
				each tm in teams
					li(class=(tm.id === team.id) ? 'active' : '', data-link='/teams/' + tm.slug)
						span
							i.material-icons people
							strong= tm.memberCount
						label=tm.name
							span= tm.description
		.col-xs-9
			.flat-nav
				ul
					li: a(href='/teams/' + team.slug + '/add')
						i.fa.fa-plus
						= t('teams:actions.addmember')
					li: a(href='/teams/' + team.slug + '/notify')
						i.fa.fa-bell-o
						= t('teams:actions.notifyteam')
					li: a(href='/teams/' + team.slug + '/edit')
						i.fa.fa-pencil
						= t('teams:actions.edit')
			.box
				h4
					i.material-icons.color-green-500 people
					= team.name
				.box-base
					.box-chrome
						= team.description
