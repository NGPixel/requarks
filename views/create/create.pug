extends ../layout

block content
	.container
		.box
			h4.color-indigo-500
				i.material-icons note_add
				= t('create:title')
			.box-base
				.box-chrome
					section
						label= t('create:fields.category.label')
						ul#create-categories.tiles
							each cat in categories
								li(data-link='/create/' + cat._id)
									i(class='material-icons color-' + cat.color)= cat.icon
									div
										strong= cat.name
										span= cat.description