extends ../layout

block content
	.review
		.review-sd
			.sdl
				h4
					i.material-icons find_in_page
					| Filters
				| --

		.review-list
			.list-header
				.width-100 ID
				.width-fill Summary
				.width-200
					.switch
						label
							| Show sub-tasks
							input(type='checkbox')
							span.lever
			.list#review-scroll
				.list-content#review-content
					.list-no-data Nothing to display!

	script#list-row-tmpl(type='text/template')
		.list-row(class!='${ rowClass }')
			.cell-id: span(class!='${ priority }') ${ id }
			.cell-summary.width-fill
				span ${ summary }
			.cell-avatar: img(src!='${  avatar }')

	script#list-status-tmpl(type='text/template')
		.list-status-row
			i
			| ${ statusName }

	script(type='text/javascript')
		!= 'var reqData = "' + JSON.stringify(reqdata).replace(/"/g, '\\"') + '";'


