extends ../layout

block content
	.container

		.flat-nav
			ul
				li: a(href='/teams')
					i.typcn.typcn-arrow-left-thick
					= t('actions.back')

		form(method='post', action='/teams/' + team.slug + '/edit')
			.row
				.col-xs-9
					.box
						h4.create-form-title
							i.material-icons.color-green-500 indeterminate_check_box
							= t('teams:actions.edit') 
							|  | 
							= team.name
						.box-base
							.box-chrome
								section
									label= t('teams:create.name.label')
									input(name='team_create_name', type='text', placeholder=t('teams:create.name.placeholder'), value=team.name)
									+fielderror('team_create_name')
									+fieldnote('required', t('teams:create.name.info'))
								section
									label= t('teams:create.description.label')
									input(name='team_create_desc', type='text', placeholder=t('teams:create.description.placeholder'), value=team.description)
									+fielderror('team_create_desc')
									+fieldnote('required', t('teams:create.description.info'))
							.box-actions
								div
									button#edit-submit(type="submit", class="btn btn-green")= t('actions.save')
								div
									button#edit-delete(type="button", class="btn btn-red")= t('actions.delete')
				.col-xs-3
					.box
						h4
							i.material-icons info_outline
							| Help
						.box-base
							.box-chrome
								| ---
	.modal
		.modal-box
			i.material-icons people
			h4 Delete this team?
			label You are about to delete team #[=team.name]? Are you sure?
			.modal-actions
				button#id-modal-cancel(class="grey")= t('actions.cancel')
				button#id-modal-ok(class="red")= t('actions.confirm')