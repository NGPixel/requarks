extends ../layout

block content
	.review
		.review-sd
			.sdl
				h4
					i.material-icons find_in_page
					| Filters
				| --

		.review-list
			.list-header
				.width-100 ID
				.width-fill Summary
				.width-200 Category
				.width-100 Project
				.width-50: i.fa.fa-user
			.list#review-scroll
				.list-content#review-content
					.list-no-data Nothing to display!

	script#list-row-tmpl(type='text/template')
		.list-row
			.cell-id.width-100: span <%= id %>
			.width-fill <%= summary %>
			.width-200 <%= category %> &gt; <%= subcategory %>
			.width-100 <%= project %>
			.width-50: i.fa.fa-user

	script#list-status-tmpl(type='text/template')
		.list-status-row
			i
			| Unconfirmed


